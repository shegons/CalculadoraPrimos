<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumno.calculadoraprimos.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calculadora de numeros primos"
        android:id="@+id/idTitulo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textPrincipal"
        android:id="@+id/idTexto"
        android:layout_below="@+id/idTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/posicion"
        android:id="@+id/idPos"
        android:layout_below="@+id/idTexto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="#68696c" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="2"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/idPos"
        android:layout_centerHorizontal="true"
        android:textColor="#f50303"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR"
        android:id="@+id/idButton"
        android:layout_below="@+id/idPos"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/idResult"
        android:layout_below="@+id/idButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/idPos"
        android:textColor="#0328d0"
        android:textSize="50dp" />

</RelativeLayout>
